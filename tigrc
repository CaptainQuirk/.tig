# vim: set ft=dosini:

# Settings
# --------

set main-view = id:yes date:short author:abbreviated commit-title:yes,graph=no

set show-changes = yes
set tab-size = 4
set line-graphics = utf-8


# Bindings
# --------

# Perform a reset on commit for main file
bind main <Ctrl-r> !git reset --mixed %(commit)
